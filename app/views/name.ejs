<%- include('header') %>
<% if (card){ %>
<h1><%= card.name %></h1>

<div class="cardsContainer">

    <div class="card">
      <a href="#">
        <img src="/visuals/<%= card.visual_name %>" alt="<%= card.name %> illustration">
        <p class="cardName"><%= card.name %></p>
      </a>
      <a class="link--deleteCard" title="Ajouter au deck" href="/deck/delete/<%=card.id%>">[ - ]</a>
      <a class="link--addCard" title="Ajouter au deck" href="/deck/add/<%=card.id%>">[ + ]</a>
    </div>
</div>
<%} else{ %>
    <p>Cette Carte n'existe pas <p>
<%} %>
<%- include('footer') %>